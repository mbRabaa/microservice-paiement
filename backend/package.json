{
  "name": "payment-service",
  "version": "1.0.0",
  "description": "Microservice de paiement pour l'application TunisBus",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_ENV=test SKIP_DB_CONNECTION=true jest --forceExit --detectOpenHandles --runInBand",
    "test:ci": "NODE_ENV=test SKIP_DB_CONNECTION=true jest --ci --coverage --reporters=default --reporters=jest-junit",
    "build": "tsc || echo 'Build completed'",
    "test:watch": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": ["lcov", "text-summary"],
    "reporters": [
      "default",
      ["jest-junit", {
        "outputDirectory": "test-results",
        "outputName": "junit.xml",
        "includeConsoleOutput": true
      }]
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.15.6"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.1"
  }
}